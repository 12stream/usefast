    /**my.wxss**/
    @import "../../common/player.wxss";
    page{
    background-color: #f4f4f4;
    }
    .my-header{
    position: relative;
    height: 320rpx;
    background: url(https://ttxuenong.oss-cn-shenzhen.aliyuncs.com/static/img/applet/my-bg.jpg) no-repeat center top;
    background-size: contain;
    }
    .my-header .avatar-box{
    width: 140rpx;
    height: 140rpx;
    border: solid 4rpx rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    box-sizing: border-box;
    margin: 0 auto;
    }
    .my-header .avatar-box image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
    }
    .my-header .label-h{
    display: block;
    height: 60rpx;
    }
    .my-header .userinfo-name{
    display: block;
    font-size: 34rpx;
    font-weight: bold;
    letter-spacing: -0.3px;
    text-align: center;
    color: #fff;
    text-shadow: 0 0 8rpx rgba(0, 0, 0, 0.5);
    margin-top: 14rpx;
    }
    .my-course{
    background: #fff;

    }
    .my-course .course-box{
    position: relative;
    height: 135rpx;
    display: flex;
    flex-flow: row;
    align-items: center;
    }
    .my-course .course-list{
    flex: 1;
    text-align: center;
    }
    .my-course .course-time{
    border-right: 1rpx solid #e5e5e5;
    }
    .my-course .course-list .lab-1{
    display: block;
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
    color: #ff6704;
    }
    .my-course .course-list .lab-2{
    display: block;
    font-size: 28rpx;
    text-align: center;
    color: #666;
    padding-top:0rpx;
    }
    .info-box{
    position: relative;
    }
    .info-box .info-card{
    position: relative;
    height: 96rpx;
    display: flex;
    flex-flow: row;
    align-items: center;
    background: #fff;
    padding-left: 32rpx;
    margin-top: 24rpx;
        width: 100%;
        overflow: hidden;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }
