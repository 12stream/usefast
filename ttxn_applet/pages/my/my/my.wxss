    .info-card .card-rt{
    flex: 1;
    font-size: 34rpx;
    letter-spacing: -0.3px;
    text-align: left;
    color: #333;
    }
    .po-right-jt{
    position: absolute;
    top: 50%;
    right: 32rpx;
    height: 22rpx;
    font-size: 22rpx;
    margin-top: -11rpx;
    color: #333;
    }
    .info-box .play-record{
    margin-top: 0;
    }
    .info-box .buy-record{
    overflow: hidden;
    }
    .buy-record ::after{
    content: "";
    position: absolute;
    left: 108rpx;
    width: 100%;
    bottom: 0;
    border-bottom: 1rpx solid #e5e5e5;
    }
    .po-right-jt::after{
        border: none;
    }
    .card-rt::after{content:"";
    position:absolute;
    left:32rpx;
    width:100%;
    bottom:0;
    border-bottom:1rpx solid #e5e5e5;
    }
    .card-rt-boder-no::after{
        border: none;
    }
