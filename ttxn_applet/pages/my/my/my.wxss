    .info-card .card-lt{
    width: 76rpx;
    }
    .info-card .card-lt label{
    display: inline-block;
    font-size: 44rpx;
    vertical-align: top;
    }
    .info-card .lab-icon-1{
    color: #00c100;
    }
    .info-card .lab-icon-2{
    color: #009bff;
    }
    .info-card .lab-icon-3{
    color: #FFC000;
    }
    .info-card .lab-icon-4{
    color: #009BFF;
