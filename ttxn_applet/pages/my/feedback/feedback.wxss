page{
    background-color: #f4f4f4;
}
.f-textarea-box{
    padding: 32rpx;
    background-color: #fff;
    border-top:1rpx solid #f4f4f4;
}
.f-textarea{
    font-size:30rpx;
    color:#333;
    width: 100%;
    height: 270rpx;
}

.f-img-box{
    display: flex;
    margin-left:-16rpx;
}

.f-img{
    width: 88rpx;
    height: 88rpx;
    margin-left:16rpx;
}

.f-file{
    width: 88rpx;
    height: 88rpx;
    border:1rpx dashed #ccc;
    margin-left:16rpx;
    text-align: center;
    line-height: 88rpx;
    color:#999;
    font-size:44rpx;
}

.f-input{
    background-color: #fff;
    color:#333;
    font-size:30rpx;
    margin:24rpx 0 40rpx 0;
    height: 88rpx;
    line-height:88rpx;
    padding-left: 32rpx;
}