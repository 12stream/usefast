.drawer_attr_content .submit-topic{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: -0.4px;
  color: #fff;
