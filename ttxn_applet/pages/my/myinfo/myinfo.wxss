/**my.wxss**/
@import "../my/my.wxss";
.none{
  display: none;
}
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  overflow: hidden;
  z-index: 999;
  color: #fff;
}
.no-bord:after{border-bottom:none}
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  background: #fff;
}
.drawer_attr_content {
  height: 540rpx;
  overflow-y: scroll;
}
.check-box{
  margin-left: -32rpx;
  width:718rpx;
  display: block;
  box-sizing: border-box;
}
.drawer_attr_content .drawer_box{
  width: 640rpx;
  padding: 32rpx 32rpx 120rpx;
  margin: 0 auto;
}
.drawer_attr_content .drawer_h1{
  font-size: 34rpx;
  text-align: center;
  color: #333;
}
.drawer_attr_content .drawer_t1{
  font-size: 28rpx;
  text-align: left;
  color: #999;
  margin-top: 24rpx;
}
.drawer_attr_content .tsc label {
    position: relative;
    display: inline-block;
    padding: 14rpx 25rpx;
    margin-left: 31rpx;
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #666;
    box-sizing: border-box;
    border:1rpx solid #e5e5e5;
}
.drawer_attr_content .tsc .active {
    background: #ff6704;
    color: #fff;
    border-color: #ff6704; 
}
.drawer_attr_content .tsc .active::after{
    border-color: #ff6704; 
}
.drawer_attr_content .tsc label:last-child{
  margin-right: 0;
}
